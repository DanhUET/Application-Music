<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Background track color -->
            <corners android:radius="2dp" /> <!-- Optional: rounded edges -->
            <size android:height="4dp" /> <!-- Thickness of the background track -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#6200EE" /> <!-- Progress bar color -->
                <corners android:radius="2dp" /> <!-- Optional: rounded edges -->
                <size android:height="4dp" /> <!-- Thickness of the progress bar -->
            </shape>
        </clip>
    </item>
</layer-list>