<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <!-- Customize snackbar theme here. -->
        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <!-- Custom snackbar textview style here. -->
        <item name="snackbarTextViewStyle">@style/SnackBarTextStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="backgroundColor">?android:colorBackground</item>
    </style>

    <style name="MiniPlayerTheme">
        <item name="android:background">?android:colorBackgroundFloating</item>
    </style>

    <style name="MiniPlayerFavoriteButton">
        <item name="android:tint">#222</item>
    </style>

    <style name="MiniPlayerMediaControlButton">
        <item name="android:tint">@color/purple_100</item>
    </style>

    <style name="ButtonBackgroundTheme">
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="android:background">@drawable/interest_button_background</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/divider_color_night</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="android:searchIcon">@drawable/ic_search_white</item>
        <item name="android:searchHintIcon">@drawable/ic_search_white</item>
        <item name="android:closeIcon">@drawable/ic_close</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchedKeyStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?attr/colorBackgroundFloating</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="SnackBarTextStyle" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SecondaryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- Nền trắng, không bo góc, không shadow -->
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/black</item>
        <item name="shapeAppearanceOverlay">@style/NoCornerShape</item>
    </style>

    <style name="NoCornerShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="MediaStateIcon" parent="Theme.MusicApplication">
        <item name="tint">@color/mediaControlColor</item>
    </style>
</resources>